		<style>
		
		#pen-title,
		#pen-description {
			position: fixed;
			top: 40%;
			left: 50%;
			z-index: 0;
			color: #484848;
		}
		
		
		::-webkit-scrollbar {
		visibility: hidden;
		width: 0px;
		}
		
		
		#pen-title {
			transform: translate(-50%, -125%);
			font-size: 2rem;
			text-transform: uppercase;
		}
		
		#pen-description {
			transform: translate(-50%, 125%);
			font-size: 1.125rem;
		}
		
		
		.card-checkbox { display: none; }
		
		
		.card {
			width: 50%;
			height: 50%;
			box-sizing: border-box;
			position: fixed;
			top: 85%;
			left: 25%;
			padding-left: 5%;
			transform: rotate(-2deg);
			z-index: 0;
			background-color: #ddd;
			color: #181818;
			box-shadow: 0 0 16px rgba(0,0,0,.25);
			transition: all .75s;
		}
		
		.card-checkbox:first-of-type + .card {
			transform: rotate(2deg);
			z-index: 2;
			background-color: #fff;
		}
		
		.card-checkbox:nth-of-type(2) + .card {
			z-index: 1;
			transform: rotate(0);
			background-color: #eee;
		}
		
		
		.card-checkbox:checked + .card {
			transform: rotate(0);
			top: 20%;
			background-color: #fff;
		}
		
		
		.card-checkbox:first-of-type:checked ~ .card-checkbox:nth-of-type(2) + .card {
				transform: rotate(2deg);
			z-index: 2;
			background-color: #fff;
		}
		
		.card-checkbox:first-of-type:checked ~ .card-checkbox:nth-of-type(3) + .card {
		z-index: 1;
			transform: rotate(0);
			background-color: #eee;
		}
		
		.card-checkbox:nth-of-type(2):checked ~ .card-checkbox:nth-of-type(3) + .card {
			z-index: 1;
			transform: rotate(0);
			background-color: #eee;
		}
		
		
		#nav {
			display: flex;
			padding-left: 0;
			list-style: none;
			font-size: .95rem;
			color: #686868;
			height: 80%;
		}
		
		label {
			display: block;
			padding: .75rem 1.25rem;
			cursor: pointer;
			transition: color .25s;
		}
		
		label:hover {
			color: #f8f8f8;
		}
			
			
		.box {
			width: 70%;
			height: 100%;
		    margin: auto;
		    overflow: hidden;
		}
		
		.card-inner {
			height: 95%;
			width: 95%;
		}
		
		.card-inner div:last-child {
			width: 65%;
			height: 80%;
		    margin-right: 0;
		    padding-left: 10%;
		    margin-top: 70px;
		}
		.card-inner div {
			overflow: auto;
			height: 100%;
			width: 30%;
			float: left;
			display:inline-block;
		}
		
		.box-scroll {
			width: 100%;
			height: 100%;
			margin-left: auto;
    		margin-right: auto;
			overflow: auto;
		}
		
		.lowercase {
			color: #EF8354;
		}
		
		.img {
			width: 100%;
		}
		
		b {
			color: #EF8354;
			margin-bottom: 5px;
		}
		
		</style>
		<script>
			$(document).ready(function() {

			  function toggleSidebar() {
				$(".button").toggleClass("active");
				$(".sidebar").toggleClass("move-to-left");
				$(".sidebar-item").toggleClass("active");
				$("main").toggleClass("hide-back");
			  }

			  $(".button").on("click tap", function() {
				toggleSidebar();
			  });

			  $(document).keyup(function(e) {
				if (e.keyCode === 27) {
				  toggleSidebar();
				}
			  });

			});
			
			$(document).ready(function() {
				if (document.getElementById("hidden-id").value == "#")
				{
					document.getElementById("sidebar-list").innerHTML = "<li class='sidebar-item'><a href='./' class='sidebar-anchor'>Главная</a></li><li class='sidebar-item'><a href='./signin' class='sidebar-anchor'>Вход</a></li><li class='sidebar-item'><a href='./signup' class='sidebar-anchor'>Регистрация</a></li>";
				}
				
				$('.fng').replaceWith("<b>График работы:</b>&nbsp&nbsp&nbspПолный день<br><br>");
				$('.gng').replaceWith("<b>График работы:</b>&nbsp&nbsp&nbspГибкий график<br><br>");
				$('.ung').replaceWith("<b>График работы:</b>&nbsp&nbsp&nbspУдаленная работа<br><br>");
				$('.ng').replaceWith("<b>График работы:</b>&nbsp&nbsp&nbspне указано<br><br>");
				$('.ns').replaceWith("<b>Сфера:</b>&nbsp&nbsp&nbspне указано");
			$('.nz').replaceWith("<b>Заработная плата:</b>&nbsp&nbsp&nbspне указано");
			$('.np').replaceWith("<b>Должность:</b>&nbsp&nbsp&nbspне указано");
			$('.nc').replaceWith("<b>Город:</b>&nbsp&nbsp&nbspне указано");
			
				
			});
